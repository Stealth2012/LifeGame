<phone:PhoneApplicationPage
    x:Class="LifeGameWP.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bindableApplicationBar="clr-namespace:LifeGameWP.Controls.BindableApplicationBar"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Landscape"  Orientation="Landscape"
    shell:SystemTray.IsVisible="False">

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <!--Drawing surface for DirectX content - supports Landscape and Portrait-->
        <DrawingSurface/>

        <!-- Media element for audio -->
        <MediaElement x:Name="MediaElement" Volume="1"/>
        
        <bindableApplicationBar:BindableApplicationBar VerticalAlignment="Bottom" BarOpacity="0.6"
                                                      ItemsSource="{Binding AppbarButtons}"
                                                      RemoveOpacityOnOpen="True">
        </bindableApplicationBar:BindableApplicationBar>
    </Grid>
</phone:PhoneApplicationPage>